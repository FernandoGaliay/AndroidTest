<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <!-- Text Styles -->

    <style name="Text_Normal">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Text_Normal.White" parent="Text_Normal">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Button Styles -->

    <style name="Button">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/normal</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Button.Primary.Text_Normal_White" parent="Button.Primary">
        <item name="android:textAppearance">@style/Text_Normal.White</item>
    </style>

    <style name="Button.Primary.Text_Normal_White.One_Line" parent="Button.Primary.Text_Normal_White">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Button.Primary.Text_Normal_White.Two_Line" parent="Button.Primary.Text_Normal_White">
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
